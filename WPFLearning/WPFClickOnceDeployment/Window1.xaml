<Window x:Class="WPFClickOnceDeployment.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="400" Width="500">
    <StackPanel>
        <Slider x:Name="imagesSlider" Minimum="100" Maximum="1000" Width="300" />
        <Image Name="image1" Source="Penguins.jpg" Width="{Binding ElementName=imagesSlider, Path=Value}" />        
    </StackPanel>
</Window>
