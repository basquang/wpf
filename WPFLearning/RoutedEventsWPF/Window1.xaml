<Window x:Class="RoutedEventsWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Border Height="50" Width="Auto" BorderBrush="Gray" BorderThickness="1">
        <StackPanel Background="LightGray" Orientation="Horizontal" ButtonBase.Click="CommonClickHandler">
            <Button Name="btnYes" Click="btnYes_Click">Yes</Button>
            <Button Name="btnNo" Click="btnNo_Click">No</Button>
            <Button Name="btnCancel">Cancel</Button>
        </StackPanel>
    </Border>
</Window>
