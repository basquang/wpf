<Window x:Class="WithoutBinding.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>            
        </Grid.RowDefinitions>
        <TextBlock>Name: </TextBlock>
        <TextBlock Grid.Row="1">Age: </TextBlock>
        <TextBox Grid.Column="1" Name="txtName"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Name="txtAge"></TextBox>
        <Button Grid.ColumnSpan="2" Grid.Row="3" Click="Button_Click">Display</Button>
    </Grid>
</Window>
